<!-- include header -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href=" https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <title>Crud application</title>
</head>

<body>
    <!-- Header -->
    <header id="header">
        <nav>
            <div class="container">
                <div class="text-center">
                    <a href="/update-user" class="nav-brand" text-dark>User management system</a>
                </div>
            </div>
        </nav>
    </header>
<!-- header end -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>
        <!-- add user form -->
    <form method="POST" id="update_user">
        <div class="new_user">
            <div class="form-group">
                <label for="name" class="text-light">Title</label>
                <input type="hidden" name="id" value="<%=user._id%>" />
                <input type="text" name="title" value="<%=user.title%>" placeholder="Mark Stoenis" />
            </div>
            <div class="form-group">
                <label for="Email" class="text-light">Author</label>
                <input type="text" name="author" value="<%=user.author%>" placeholder="example@gmail.com" />
            </div>
            <div class="form-group">
                <label for="Email" class="text-light">Release Year</label>
                <input type="text" name="release_year" value="<%=user.release_year%>" placeholder="example@gmail.com" />
            </div>
            <div class="form-group">
                <label for="Email" class="text-light">Genre</label>
                <input type="text" name="genre" value="<%=user.genre%>" placeholder="example@gmail.com" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </div>
    </form>
    </div>
</main>

<!-- /Main Site -->

<!-- include footer -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/js/index.js"></script>
</body>

</html>

<!-- /include footer -->