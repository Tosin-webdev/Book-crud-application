<!-- include header -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href=" https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <title>Crud application</title>
</head>

<body>
    <!-- Header -->
    <header id="header">
        <nav>
            <div class="container">
                <div class="text-center">
                    <a href="/" class="nav-brand" text-dark>Book Store</a>
                </div>
            </div>
        </nav>
    </header>
</body>

<!-- Main site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-user" class="border-shadow">
                <span class="text-gradient">New User <i class="fas fa-user"></i></span>
            </a>
        </div>

        <!-- form handling -->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Release year</th>
                        <th>Genre</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <% for (var i = 0; i < users.length; i++){%>
                   <tr>
                    <td><%= i + 1 %></td>
                    <td><%= users[i].title %></td>
                    <td><%= users[i].author %></td>
                    <td>
                        <%= users[i].release_year %>
                    </td>
                    <td>
                        <%= users[i].genre %>
                    </td>
                    <td>
                        <a href="/update-user" class="btn border-shadow update">
                            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                        </a>
                        <a class="btn border-shadow delete">
                            <span class="text-gradient"><i class="fas fa-times"></i></span>
                        </a>
                   </tr>
                <%}%>
                </tbody>
            </table>
        </form>
    </div>
</main>
<!-- main site -->
<!-- include footer -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/js/index.js"></script>
</body>

</html>